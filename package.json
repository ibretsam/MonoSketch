{
    "devDependencies": {
        "live-server": "^1.2.2",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5"
    },
    "scripts": {
        "watch": "nodemon",
        "serve": "live-server --host=localhost --port=8080 build/developmentExecutable/",
        "dev": "run-p watch serve"
    },
    "nodemonConfig": {
        "verbose": true,
        "ignore": [
            "**/src/test/**",
            "**/build/**"
        ],
        "ext": "kt,scss,html",
        "exec": "./gradlew browserDevExeDis",
        "delay": 2500
    }
}
